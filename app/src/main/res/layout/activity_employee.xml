<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeActivity"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/currentPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationBarEmployee"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="bottom"
        android:background="@color/transparent_white3"
        app:elevation="0dp"
        app:itemRippleColor="@color/light_pink"
        app:itemIconTint="@color/navigation_bar_button_colours"
        app:itemTextColor="@color/navigation_bar_button_colours"
        app:menu="@menu/navigation_bar_employee"/>

</FrameLayout>